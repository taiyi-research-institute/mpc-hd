package main

import (
	"crypto/hmac"
	"encoding/binary"
)

func main(g Garbler, e Evaluator) []byte {
	par_sk := scalar_add(g.wi, e.wi)

	data := make([]byte, 37)
	idx := g.idx + 0x80000000
	copy(data[1:33], par_sk)
	data = binary.PutUint32(data, 33, idx)

	return hmac.SumSHA512(data, g.cc[:])
}

const (
	N uint257 = 0xfffffffffffffffffffffffffffffffebaaedce6af48a03bbfd25e8cd0364141
)

type Garbler struct {
	wi uint257
	cc [32]byte
	idx uint32
}

type Evaluator struct {
	wi uint257
}

func scalar_add(a, b uint257) []byte {
	sk := uint256( (a+b)%N )
	sk_bytes := binary.PutUint(make([]byte, 32), 0, sk)
	return sk_bytes
}
